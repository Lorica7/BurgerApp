<div class="jumbotron">
  <h1 class="display-4">Eat-Da-Burger</h1>
  <img src="../../public/assets/IMG/AvoBurger.jpg" alt="avocado burger">
</div>

<div class = "container">


  <div class="row">
    <div class="col-sm">
    <h2>Burgers You Can Eatz!</h2>

<ul>
  <script id="entry-template" type="text/x-handlebars-template">
  {{#each burgers}}
    {{#unless devoured}} 
      {{> burger_name/burgerBlock devoured=false}}
    {{/unless}}
  {{/each}}
  </script>
</ul>
    </div>
    <div class="col-sm">
      <h2>Build a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new-burger">Burger Description:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Build-A-Burger</button>
</form>
    </div>
    <div class="col-sm">
        <h2>Burgers That Have Been Et.</h2>
     <ul>
       <script id="entry-template" type="text/x-handlebars-template">
  {{#each burgers}}
    {{#if devoured}}
      {{> burger_name/burgerBlock devoured=true}}
    {{/if}}
  {{/each}}
  </script>
</ul>
    </div>
  </div>


</div>