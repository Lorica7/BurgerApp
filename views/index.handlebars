<div class="jumbotron bg-success">
  <h1 class="display-4" style="text-align: center;">Eat-Da-Burger</h1>
  <div class="media">
    <img class="rounded mx-auto" style="max-width: 75%;" src="/public/IMG/AvoBurger.jpg" alt="avocado burger">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2 class='text-success'>Burgers You Can Eatz!</h2>
     <div id="menu" class="clearfix">

  <ul>
    {{#each burgers}} 
    {{#unless devoured}}
    <li>
      <p>
        {{this.burger_name}}

        <button data-id="{{this.id}}" class="change-eaten" data-eaten="{{this.devoured}}">EAT Burger!</button>
      </p>
    </li>
    {{/unless}} 
    {{/each}}
  </ul>

</div>
    </div>
    <div class="col-sm">
      <h2 class="text-success">Build a Burger</h2>
      <form>

        <div class="form-group">
          <label for="new-burger">Burger Description:</label>
          <input type="text" id="new-burger" name="name">
        </div>
        <button type="submit" class="button">Build-A-Burger</button>
      </form>
    </div>
    <div class="col-sm">
      <h2 class="text-success">Burgers That Have Been Et.</h2>
   <ul>
    {{#each burgers}} 
    {{#if devoured}}
    <li>
      <p>
         {{this.burger_name}}
      </p>
    </li>
    {{/if}} 
    {{/each}}
</ul>
    </div>
  </div>


</div>

